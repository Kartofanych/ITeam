<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="70dp"
    android:background="@drawable/element_edit_field"
    android:backgroundTint="@color/grey"
    >

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:id="@+id/rel_date"
        >
        <View
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_blue"
            />
        <TextView
            android:id="@+id/event_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фев"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:fontFamily="@font/regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:fontFamily="@font/semibold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/event_month"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rel_date"
        android:paddingHorizontal="20dp"
        android:layout_centerVertical="true"
        >
        <RelativeLayout
            android:id="@+id/event_info_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:lines="1"
                android:text="Библиовечер"
                android:textColor="@color/black"

                />
            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="Начало в 15:40"
                android:lines="1"
                android:layout_below="@+id/event_name"
                android:layout_marginVertical="2dp"

                />

            <TextView
                android:id="@+id/event_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="Библиотека"
                android:lines="1"
                android:layout_below="@+id/event_time"


                />
        </RelativeLayout>

        <TextView
            android:id="@+id/connect_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:background="@drawable/element_edit_field"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/semibold"
            android:textColor="@color/black"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"


            />


    </RelativeLayout>





</RelativeLayout>