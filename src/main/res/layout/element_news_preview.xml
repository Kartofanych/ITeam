<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/news_preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/event_example"
                android:scaleType="centerCrop"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_black"
            android:layout_alignParentBottom="true"
            android:alpha="1"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_toolbar"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News name"
                android:textColor="@color/white"
                android:fontFamily="@font/semibold"
                android:textSize="22dp"
                android:layout_marginBottom="10dp"
                android:maxLines="2"
                android:ellipsize="end"

                />






        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/comments_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/semibold"
                android:text="173"
                android:textColor="#9EFFFFFF"
                android:layout_toEndOf="@id/comments_image"
                android:layout_marginStart="5dp"/>
            <ImageView
                android:id="@+id/comments_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_comment"
                app:tint="#9EFFFFFF"
                />

            <TextView
                android:id="@+id/time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="5 часов назад"
                android:textColor="#9EFFFFFF"
                android:fontFamily="@font/semibold"

                />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>