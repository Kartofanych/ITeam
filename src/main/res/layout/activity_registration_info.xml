<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginAdminActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_icon"
        android:textSize="22dp"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/info"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_background_bottom"
            app:tint="#165FF1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/icon_background_center"
            app:tint="#165FF1" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/icon_background_center"
            app:tint="#165FF1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="40dp"

            android:src="@drawable/icon_background_center"
            app:tint="#165FF1" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingHorizontal="30dp"
        android:layout_alignParentBottom="true"
        >

        <EditText
            android:id="@+id/ed_handle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/element_edit_field"
            android:hint="Придумайте хэндл"
            android:backgroundTint="@color/blue_it"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textColorHint="#D4D6E4"
            android:paddingHorizontal="10dp" />

        <TextView
            android:id="@+id/handle_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/element_edit_field"
            android:text="Длина хэндла должна быть не менее 3"
            android:fontFamily="@font/medium"
            android:textColor="@color/red_from"
            android:layout_below="@+id/ed_handle"
            android:paddingHorizontal="5dp"
            android:visibility="invisible"
            android:textSize="12dp"

            />

        <EditText
            android:id="@+id/ed_pass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ed_handle"
            android:background="@drawable/element_edit_field"
            android:backgroundTint="@color/blue_it"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textColorHint="#D4D6E4"
            android:hint="Придумайте пароль"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:inputType="textVisiblePassword"
            />
        <TextView
            android:id="@+id/password1_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/element_edit_field"
            android:text="Длина пароля должна быть не менее 6"
            android:fontFamily="@font/medium"
            android:textColor="@color/red_from"
            android:layout_below="@+id/ed_pass1"
            android:paddingStart="10dp"
            android:visibility="invisible"
            android:textSize="12dp"
            android:paddingHorizontal="5dp"
            />

        <EditText
            android:id="@+id/ed_pass2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ed_pass1"
            android:background="@drawable/element_edit_field"
            android:backgroundTint="@color/blue_it"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textColorHint="#D4D6E4"
            android:hint="Повторите пароль"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/password2_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/element_edit_field"
            android:text="Пароли не совпадают"
            android:fontFamily="@font/medium"
            android:textColor="@color/red_from"
            android:layout_below="@+id/ed_pass2"
            android:paddingStart="10dp"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"
            android:textSize="12dp"
            android:paddingHorizontal="5dp"

            />

        <TextView
            android:id="@+id/register"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/element_edit_field"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            android:layout_below="@+id/password2_wrong"
            android:text="Зарегистрироваться"
            android:gravity="center"
            android:backgroundTint="@color/blue_it"
            android:visibility="visible"
            />

    </RelativeLayout>

</RelativeLayout>