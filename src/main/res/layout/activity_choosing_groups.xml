<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingGroupsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="360dp"
            android:src="@drawable/icon_background_top"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:tint="#165FF1"
            />
        <ImageView
            android:layout_width="240dp"
            android:layout_height="360dp"
            android:src="@drawable/icon_background_bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:tint="#165FF1"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_background_center"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="80dp"
            app:tint="#165FF1"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбери интересные\nтебе категории"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="23dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="20dp"
            android:elevation="2dp"
            />


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/rel_later"
        android:paddingVertical="10dp"
        >
        
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.04"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_centerInParent="true"

                >
                <RelativeLayout
                    android:id="@+id/rel_sports"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_grey"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/icon_sports"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:tint="@color/white"
                        android:src="@drawable/icon_sports"
                        android:layout_centerHorizontal="true"
    
                        />
                    <TextView
                        android:id="@+id/text_sports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Спорт"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:layout_below="@+id/icon_sports"
                        android:layout_centerHorizontal="true"
                        />
                    
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            
            <ImageView
                android:id="@+id/animation_sport"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/element_button_pulse_effect"
                android:layout_centerInParent="true"
                app:tint="@color/blue_from"
                />
            
        
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.12">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_olympiads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_centerInParent="true"
                >
                <RelativeLayout
                    android:id="@+id/rel_olympiads"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/gradient_grey"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/icon_olympiads"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:tint="@color/white"
                        android:src="@drawable/icon_olympiads"
                        android:layout_centerHorizontal="true"

                        />
                    <TextView
                        android:id="@+id/text_olympiads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Олимпиады"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:layout_below="@+id/icon_olympiads"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/animation_olympiads"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/element_button_pulse_effect"
                android:layout_centerInParent="true"
                app:tint="@color/blue_from"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="195dp"
            android:layout_height="195dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.47">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lyceum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="65dp"
                android:layout_centerInParent="true"
                >
                <RelativeLayout
                    android:id="@+id/rel_lyceum"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/gradient_grey"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/icon_lyceum_life"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:tint="@color/white"
                        android:src="@drawable/icon_school"
                        android:layout_centerHorizontal="true"

                        />
                    <TextView
                        android:id="@+id/text_lyceum_life"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Жизнь лицея"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:layout_below="@+id/icon_lyceum_life"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="5dp"
                        />




                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/animation_lyceum_life"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/element_button_pulse_effect"
                android:layout_centerInParent="true"
                app:tint="@color/blue_from"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.7">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_centerInParent="true"
                >
                <RelativeLayout
                    android:id="@+id/rel_languages"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/gradient_grey"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/icon_languages"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:tint="@color/white"
                        android:src="@drawable/icon_language"
                        android:layout_centerHorizontal="true"

                        />
                    <TextView
                        android:id="@+id/text_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Языки"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="5dp"
                        android:layout_below="@+id/icon_languages"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/animation_languages"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/element_button_pulse_effect"
                android:layout_centerInParent="true"
                app:tint="@color/blue_from"
                />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.9">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                android:layout_centerInParent="true"
                >
                <RelativeLayout
                    android:id="@+id/rel_"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/gradient_grey"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/icon_"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        app:tint="@color/white"
                        android:src="@drawable/icon_olympiads"
                        android:layout_centerHorizontal="true"

                        />
                    <TextView
                        android:id="@+id/text_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Что то еще"
                        android:paddingTop="5dp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/white"
                        android:paddingHorizontal="8dp"
                        android:layout_below="@+id/icon_"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/animation_"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/element_button_pulse_effect"
                android:layout_centerInParent="true"
                app:tint="@color/blue_from"
                />


        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
    


    <TextView
        android:id="@+id/ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Готово"
        android:fontFamily="@font/semibold"
        android:textColor="@color/blue_main"
        android:paddingHorizontal="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:textSize="19dp"


        />

    <RelativeLayout
        android:id="@+id/rel_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/text_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пропустить"
            android:fontFamily="@font/semibold"
            android:textColor="@color/hint_color"
            android:paddingHorizontal="8dp"
            />

    </RelativeLayout>


</RelativeLayout>